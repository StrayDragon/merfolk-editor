{
  "name": "merfolk-editor",
  "version": "0.1.0",
  "description": "A visual Mermaid flowchart editor with bidirectional sync",
  "type": "module",
  "main": "cjs/index.cjs",
  "module": "dist/lib/index.es.js",
  "types": "dist/lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.es.js",
      "require": "./cjs/index.cjs"
    },
    "./style": "./dist/merfolk-editor.css"
  },
  "files": [
    "cjs",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "mermaid": ">=10.0.0",
    "svelte": ">=5.0.0",
    "d3": ">=7.0.0",
    "@dagrejs/dagre": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "mermaid": {
      "optional": false
    },
    "svelte": {
      "optional": false
    },
    "d3": {
      "optional": false
    },
    "@dagrejs/dagre": {
      "optional": false
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && vite build --config vite.config.lib.ts",
    "build:lib": "vite build --config vite.config.lib.ts",
    "prepare": "vite build --config vite.config.lib.ts",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest run",
    "test:e2e": "PLAYWRIGHT_CHROMIUM_EXECUTABLE=$(command -v chromium) pnpm exec playwright test"
  },
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.2.9",
    "@tsconfig/svelte": "^5.0.6",
    "@types/d3": "^7.4.3",
    "jsdom": "^27.3.0",
    "svelte": "^5.45.10",
    "svelte-check": "^4.3.4",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@dagrejs/dagre": "^1.1.8",
    "d3": "^7.9.0",
    "mermaid": "^11.12.2"
  },
  "keywords": [
    "mermaid",
    "flowchart",
    "diagram",
    "editor",
    "visual",
    "interactive",
    "svelte",
    "typescript"
  ],
  "homepage": "https://github.com/straydragon/merfolk-editor#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/straydragon/merfolk-editor.git"
  },
  "bugs": {
    "url": "https://github.com/straydragon/merfolk-editor/issues"
  },
  "author": {
    "name": "straydragon",
    "email": "straydragonl@foxmail.com"
  },
  "license": "MIT"
}
